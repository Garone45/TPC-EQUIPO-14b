<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="Site.master.cs" Inherits="Presentacion.SiteMaster" %>

<!DOCTYPE html>
<html lang="es">
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%: Page.Title %> - Mi aplicación ASP.NET</title>
    
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <!-- TUS ESTILOS (Tailwind, Fuentes, etc. van AQUI, en el HEAD) -->
    
    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <!-- Fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />

    <!-- Configuración de Tailwind -->
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#1173d4",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101922",
                    },
                    fontFamily: {
                        display: ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        DEFAULT: "0.25rem",
                        lg: "0.5rem",
                        xl: "0.75rem",
                        full: "9999px"
                    },
                },
            },
        }
    </script>

    
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>

    
    <asp:ContentPlaceHolder ID="HeadContent" runat="server">
    </asp:ContentPlaceHolder>

</head>
<body class="font-display"> 
    <form runat="server">
        
        <asp:ScriptManager runat="server">
            <Scripts>
                
                <asp:ScriptReference Name="MsAjaxBundle" />
                <asp:ScriptReference Name="jquery" />
                <asp:ScriptReference Name="WebForms.js" Assembly="System.Web" Path="~/Scripts/WebForms/WebForms.js" />
                <asp:ScriptReference Name="WebUIValidation.js" Assembly="System.Web" Path="~/Scripts/WebForms/WebUIValidation.js" />
                <asp:ScriptReference Name="MenuStandards.js" Assembly="System.Web" Path="~/Scripts/WebForms/MenuStandards.js" />
                <asp:ScriptReference Name="GridView.js" Assembly="System.Web" Path="~/Scripts/WebForms/GridView.js" />
                <asp:ScriptReference Name="DetailsView.js" Assembly="System.Web" Path="~/Scripts/WebForms/DetailsView.js" />
                <asp:ScriptReference Name="TreeView.js" Assembly="System.Web" Path="~/Scripts/WebForms/TreeView.js" />
                <asp:ScriptReference Name="WebParts.js" Assembly="System.Web" Path="~/Scripts/WebForms/WebParts.js" />
                <asp:ScriptReference Name="Focus.js" Assembly="System.Web" Path="~/Scripts/WebForms/Focus.js" />
                <asp:ScriptReference Name="WebFormsBundle" />
            </Scripts>
        </asp:ScriptManager>
        
        <div class="relative flex min-h-screen w-full flex-row bg-background-light dark:bg-background-dark">
            
            <!-- SIDEBAR -->
            <aside class="flex h-screen w-64 flex-col justify-between border-r border-slate-200 dark:border-slate-800 bg-white dark:bg-background-dark p-4 sticky top-0">
                <div class="flex flex-col gap-4">
                    <div class="flex items-center gap-3 px-2 py-2">
                        <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-full size-10"
                             style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuDFAAqHeSfO7W2HLqUVjRN65ATAJ0ChYsrUYykMt-ZFIpTcdegixzPVHSaPtGCJt1dDJJwFCZO6FgDzDKFlW85q3I7FX3su9aAS7czVzA76JDQOWzW94d5FQdGe4JCX-D8FWHVswo5EVx4haYs0LpV_X9WDc22NVDXorBRISpGpBG1ZD-WmcepKlm_QCEcq9M9fpf2obeTvo9ykm5qVTh2_qwxoOHSXxU4EpTEYbuZHNw_GjyarChxZYmdgU9F4U85e2HhyZVCgLlDr");'>
                        </div>
                        <div class="flex flex-col">
                            <h1 class="text-slate-900 dark:text-slate-100 text-base font-medium">TPC Programacion</h1>
                            <p class="text-slate-500 dark:text-slate-400 text-sm">Admin Panel</p>
                        </div>
                    </div>

                   

                    <!-- Navegación (Pestañas) -->
                    <nav class="flex flex-col gap-2 mt-2">
                        <asp:HyperLink ID="lnkDashboard" runat="server" NavigateUrl="~/Default.aspx"
                            CssClass="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-100 text-slate-700 dark:text-slate-300">
                            <span class="material-symbols-outlined">dashboard</span>
                            <p class="text-sm font-medium">Dashboard</p>
                        </asp:HyperLink>

                        <asp:HyperLink ID="lnkVentas" runat="server" NavigateUrl="~/Ventas.aspx"
                            CssClass="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-100 text-slate-700 dark:text-slate-300">
                            <span class="material-symbols-outlined">storefront</span>
                            <p class="text-sm font-medium">Ventas</p>
                        </asp:HyperLink>

                        <asp:HyperLink ID="lnkCompras" runat="server" NavigateUrl="~/Compras.aspx"
                            CssClass="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-100 text-slate-700 dark:text-slate-300">
                            <span class="material-symbols-outlined">shopping_cart</span>
                            <p class="text-sm font-medium">Compras</p>
                        </asp:HyperLink>
                        
                        <!-- Separador -->
                        <p class="text-xs font-semibold text-slate-400 uppercase tracking-wider px-3 mt-4">Gestión</p>

                        <asp:HyperLink ID="lnkProductos" runat="server" NavigateUrl="~/ProductosListados.aspx"
                            CssClass="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-100 text-slate-700 dark:text-slate-300">
                            <span class="material-symbols-outlined">inventory_2</span>
                            <p class="text-sm font-medium">Productos</p>
                        </asp:HyperLink>
                    

                        <asp:HyperLink ID="lnkClientes" runat="server" NavigateUrl="~/ClientesListado.aspx"
                            CssClass="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-100 text-slate-700 dark:text-slate-300">
                            <span class="material-symbols-outlined">group</span>
                            <p class="text-sm font-medium">Clientes</p>
                        </asp:HyperLink>

                        <asp:HyperLink ID="lnkProveedores" runat="server" NavigateUrl="~/ProveedoresListados.aspx"
                            CssClass="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-100 text-slate-700 dark:text-slate-300">
                            <span class="material-symbols-outlined">local_shipping</span>
                            <p class="text-sm font-medium">Proveedores</p>
                        </asp:HyperLink>

                        <asp:HyperLink ID="lnkMarcas" runat="server" NavigateUrl="~/MarcasListado.aspx"
                            CssClass="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-100 text-slate-700 dark:text-slate-300">
                            <span class="material-symbols-outlined">label</span>
                            <p class="text-sm font-medium">Marcas</p>
                        </asp:HyperLink>

                        <asp:HyperLink ID="lnkCategorias" runat="server" NavigateUrl="~/CategoriaListado.aspx"
                            CssClass="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-100 text-slate-700 dark:text-slate-300">
                            <span class="material-symbols-outlined">category</span>
                            <p class="text-sm font-medium">Categorías</p>
                        </asp:HyperLink>
                    </nav>
                </div>

                <!-- Perfil / Logout -->
                <div class="flex flex-col gap-1 border-t border-slate-200 dark:border-slate-700 pt-2">
                    <asp:LinkButton ID="btnLogout" runat="server"
                        CssClass="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-100 text-slate-700 dark:text-slate-300">
                        <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-full size-8"
                             style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuAW0nPCYchS6nUZLHvMuEXgQHrM9irXOHXxAQMBvo9GFv5jP1gsz32NmtG88UTuP0k0dGshgXYKKmcSPoiu6PNf31Yc3vG8ScuxrG0jNo8U9CpoCEMuhOOoau12ACdP7rDCof0pmQPtjK_gK-OaPN9UYerK1HB2O0i38_HgYCgzRLkGy8p0CxN1I68yl6TvMCLHfgxYbuunkoC1k7hVePHvaHjVdp1an_A85kDwRXLv6auAmA9CKhSy5oY79IKy1pA_l2beqLo1yl-1");'>
                        </div>
                        <div class="flex-1 text-left">
                            <p class="text-sm font-medium">Julian</p>
                            <p class="text-xs text-slate-500">Julian@example.com</p>
                        </div>
                        <span class="material-symbols-outlined">logout</span>
                    </asp:LinkButton>
                </div>
            </aside>

            <!-- CONTENIDO PRINCIPAL -->
            <main class="flex flex-1 flex-col">
                <header class="flex items-center justify-between border-b border-slate-200 bg-white dark:bg-background-dark px-6 sm:px-10 py-3 sticky top-0 z-10">
                    <div class="flex flex-col">
                        
                        <h2 class="text-slate-900 dark:text-white text-lg font-semibold">Bienvenido de nuevo, Julian</h2>
                        
                    </div>
                    <div class="flex justify-end gap-4 items-center">
                        <asp:Button ID="btnNotificaciones" runat="server" Text="🔔" CssClass="size-10 bg-slate-100 dark:bg-slate-800 rounded-lg text-slate-900 dark:text-slate-100" />
                        <asp:Button ID="btnAgregar" runat="server" Text="➕" CssClass="size-10 bg-primary text-white rounded-lg" />
                    </div>
                </header>
                
               
                <div class="p-4 sm:p-6 lg:p-8 flex-1 bg-background-light dark:bg-background-dark">
                    <asp:ContentPlaceHolder ID="MainContent" runat="server">
                        
                    </asp:ContentPlaceHolder>
                </div>
            </main>
        </div>

        
        
    </form>
</body>
</html>
